<h3><%= @merchant.name %></h3>

<h4>My Bulk Discounts</h4>

<div id="bulk_discounts_list">
  <% @bulk_discounts.each do |bulk_discount| %>
    <p>Percantage Discount: <%= link_to "#{bulk_discount.percentage_discount}%", "/merchants/#{@merchant.id}/bulk_discounts/#{bulk_discount.id}" %> | Needed Bulk: <%= bulk_discount.quantity_threshold %></p>
  <% end %>
</div>