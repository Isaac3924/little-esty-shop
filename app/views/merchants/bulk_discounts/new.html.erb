<header>
  <h2>New Bulk Discount Submission</h2>
</header>
<section id="new_bulk_discount">
  <%=  form_with url: merchant_bulk_discounts_path(@merchant), local: true do |f| %>
    <%=  f.label :percentage_discount, "Percentage Discount:" %>
    <%=  f.text_field :percentage_discount, required: true %><br>
    <%=  f.label :quantity_threshold, "Quantity Threshold:" %>
    <%=  f.text_field :quantity_threshold, required: true %><br>
    <%=  f.submit "Submit" %>
  <% end %>
</section>
